<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtSelectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:background="@drawable/button_background"
        android:padding="12dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/combinedChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtChartTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sản lượng điện tiêu thụ"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/txtRoomData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rooms: 0"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:background="@drawable/data_background"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/txtEventData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Events: 0"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:background="@drawable/data_background"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/txtTotalMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Money: 0 VND"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:background="@drawable/data_background"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/txtTotalKWh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total kWh: 0 kWh"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:background="@drawable/data_background" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
